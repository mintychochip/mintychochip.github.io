---
interface Props {
  title: string;
  description: string;
  tags: string[];
  repo?: string;
  url?: string;
  preview?: string;
}

const { title, description, tags, repo, url, preview } = Astro.props;
---
<div class="bg-bg-card border border-border rounded-lg overflow-hidden hover:shadow-md transition-shadow duration-200 group">
  {preview && (
    <div class="relative w-full aspect-video bg-border overflow-hidden">
      <img
        src={preview}
        alt={`${title} demo`}
        class="w-full h-full object-cover"
        loading="lazy"
      />
      <div class="absolute inset-0 bg-black/0 group-hover:bg-black/10 transition-colors duration-200" />
    </div>
  )}
  <div class="px-4 pt-3 pb-4">
    <h3 class="text-lg font-bold mb-1">{title}</h3>
    <p class="text-sm text-text-muted mb-3">{description}</p>
    <div class="flex flex-wrap gap-1.5 mb-3">
      {tags.map((tag) => (
        <span class="inline-block px-2 py-0.5 text-xs font-medium text-text-muted bg-tag-bg rounded-full">
          {tag}
        </span>
      ))}
    </div>
    <div class="flex gap-3 text-sm">
      {repo && (
        <a href={repo} target="_blank" rel="noopener noreferrer"
           class="text-accent hover:text-accent-hover hover:underline transition-colors">
          Source
        </a>
      )}
      {url && (
        <a href={url} target="_blank" rel="noopener noreferrer"
           class="text-accent hover:text-accent-hover hover:underline transition-colors">
          Live Demo
        </a>
      )}
    </div>
  </div>
</div>
